            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-65965115-1', 'auto');
    ga('send', 'pageview');

</script>
<footer class="page-footer orange">
    <div class="footer-copyright">
        <div class="container">
            <span class="left">AviaThai.com, 2015</span><span class="right">Email: <a href="mailto:info@aviathai.com" class="orange-text text-lighten-3">info@aviathai.com</a></span>
        </div>
    </div>
</footer>
</body>
</html>